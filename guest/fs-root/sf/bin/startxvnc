#! /bin/bash

CDY="\e[0;33m"
CDC="\e[0;36m"
CN="\e[0m"

cleanup()
{
	kill -SIGTERM $PID_X $PID_F $PID_V
	exit
}

unset VNC_OPTS
VNC_OPTS+=("-shared")
VNC_OPTS+=("-xkb")
VNC_OPTS+=("-timeout" "3600")
[[ -n $PASSWORD ]] && VNC_OPTS+=("-usepw")
VNC_OPTS+=("-forever")
VNC_OPTS+=("-localhost")
#VNC_OPTS+=("-wirecopyrect" "-scrollcopyrect")
#VNC_OPTS+=("-nopw")
VNC_OPTS+=("-afteraccept" "pidof xterm || { DISPLAY=:10 xterm -bg black -fg gray & }")
VNC_PASSWDFILE="${HOME}/.vnc/passwd"

mk_vncpass()
{
	local str
	[[ -z $PASSWORD ]] && {
		str=$(echo -n "VNC-$USERNAME-${SF_SEC}" | sha512sum | base64 -w0)
		str="${str//[^[:alpha:]]/}"
		str="${str//[1lIi0ODG8B5S2Zmn]/}"
		PASSWORD="${str:0:16}"
	}
	str="$(dirname "$VNC_PASSWDFILE")"
	[[ ! -d "$str" ]] && mkdir "$str"
	x11vnc -storepasswd "${PASSWORD}" "${VNC_PASSWDFILE}" &>/dev/null
}

startonce()
{
	local pid
	pid=$(pidof "$1")
	[[ -n $pid ]] && { echo "$pid"; return 0; }

	"$@" &>/dev/null &
	echo "$!"
	return 0
}

sv_startx()
{
	local ppid=$1
	trap "cleanup" SIGHUP
	#Xvfb :10 -screen 0 1920x1080x24 &
	PID_X=$(startonce Xvfb :10 -screen 0 1024x768x24)
	echo "pid=$PID_X"
	#fluxbox -display :10 &>/dev/null &
	#xfce4-session --display=:10
	PID_F=$(DISPLAY=:10 startonce awesome)

	# vncserver -geometry 1024x720 -localhost no :0
	PID_V=$(startonce x11vnc -display :10 "${VNC_OPTS[@]}")
	trap "" SIGHUP
	jobs -p
	while [[ -d /proc/$PPID && -d /proc/$PID_V ]]; do
		sleep 5
	done
	cleanup
}


#C_IP=$(</config/self/c_ip)
[[ -n $PASSWORD ]] && {
	[[ ${#PASSWORD} -le 3 ]] && unset PASSWORD
	mk_vncpass
}
sv_startx $PPID &>/dev/null &
disown

echo -e "Log in using:

    ${CDC}ssh -L5900:127.0.0.1:5900 -o 'SetEnv SECRET=${SF_SEC}' root@${SF_FQDN}${CN}

Then use your favourite VNC client and connect to 127.0.0.1:5900.
VNC PASSWORD: ${CDY}${PASSWORD:-<NO PASSWORD>}${CN}

Exiting this shell will also terminate the VNC session."
